{
    "$schema": "https://www.krakend.io/schema/krakend.json",
    "version": 3,
    "name": "paas-backend-api",
    "extra_config": {
        "security/cors": {
            "allow_origins": ["*"],
            "allow_methods": ["GET", "HEAD", "POST", "PUT", "PATCH", "DELETE"],
            "expose_headers": ["Content-Length", "Content-Type"],
            "max_age": "12h",
            "allow_credentials": false,
            "debug": false
        },
        "telemetry/opentelemetry": {
            "metric_reporting_period": 1,
            "service_name": "krakend",
            "exporters": {
                "otlp": [
                    {
                        "name": "grafana-alloy",
                        "host": "grafana-alloy.monitoring.svc",
                        "port": 4317,
                        "use_http": false,
                        "disable_metrics": true,
                        "disable_traces": false
                    }
                ]
            },
            "layers": {
                "global": {
                    "disable_metrics": false,
                    "disable_traces": false,
                    "disable_propagation": false
                },
                "proxy": {
                    "disable_metrics": false,
                    "disable_traces": false
                },
                "backend": {
                    "metrics": {
                        "disable_stage": false,
                        "round_trip": false,
                        "read_payload": false,
                        "detailed_connection": false,
                        "static_attributes": []
                    },
                        "traces": {
                        "disable_stage": false,
                        "round_trip": false,
                        "read_payload": false,
                        "detailed_connection": false,
                        "static_attributes": []
                    }
                }
            }
        }
    },
    "timeout": "60s",
    "cache_ttl": "300s",
    "endpoints": [
        {
            "endpoint": "/fetch/{connector_name}/{connector_item}",
            "method": "POST",
            "output_encoding": "no-op",
            "backend": [
                {
                    "host": ["http://fetch-api.fetch-api.svc:8069"],
                    "url_pattern": "/{connector_name}/{connector_item}",
                    "method": "POST",
                    "encoding": "no-op",
                    "sd": "static",
                    "disable_host_sanitize": false
                }
            ]
        }
    ]
}
